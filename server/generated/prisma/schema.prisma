datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

model Album {
  id          Int      @id @default(autoincrement())
  addedDate   DateTime @default(now())
  artist      String
  album       String
  releaseYear Int
  genre       String

  @@index([artist])
  @@index([genre])
}
